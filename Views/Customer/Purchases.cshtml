@model IEnumerable<Order>
<h2 class="mt-3"><i class="fa-solid fa-cart-shopping"></i> Purchases</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="text-left">Order ID</th>
      <th scope="col" class="text-right">Order Date</th>
      <th scope="col" class="text-right">Shipped Date</th>
    </tr>
</thead>
<tbody id="product_rows" data-id="@ViewBag.id">



</tbody>
</table>

<div class="list-group">
    @foreach (Order o in Model)
    {
        <a asp-action="PurchaseDetail" asp-route-id="@o.OrderId" class="list-group-item list-group-item-action">@o.OrderId - ORDER DATE: @o.OrderDate - SHIPPED DATE: @o.ShippedDate</a>
    }
</div>