@model IEnumerable<Review>
<h2 class="mt-3"><i class="fa-solid fa-cart-shopping"></i> Reviews</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="text-left">Product Name</th>
      <th scope="col" class="text-right">Rating</th>
      <th scope="col" class="text-right">Comment</th>
      <th scope="col" class="text-right">Date</th>
    </tr>
</thead>
<tbody>
<div class="list-group">
    @foreach (Review r in Model)
    {
        
          <tr>
            <td class="text-left">@r.Product.ProductName</td>
            <td class="text-right">@r.Rating</td>
            <td class="text-right">@r.Comment</td>
            <td class="text-right">@r.DateTime.ToString("MM/dd/yyyy")</td>
          </tr>
        
    }
</div>
</tbody>
</table> 



